<h2>Добавить курс</h2>

<form action="/add" method="post">
    <div class="input-field col s12">
        <input name="title" id="title" type="text" class="validate" required>
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите текст">Введите текст</span>
    </div>

    <div class="input-field col s12">
        <input name="price" id="price" type="number" class="validate" required>
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите текст">Введите цену</span>
    </div>

    <div class="input-field col s12">
        <input name="img" id="img" type="text" class="validate" required>
        <label for="img">Url картинки</label>
        <span class="helper-text" data-error="Введите текст">Введите текст</span>
    </div>
    <button class="btn btn-primary">Добавить курс</button>
</form>

