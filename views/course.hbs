{{#if course}}
    <div class="row">
        <div class="col s12 m7">
            <div class="card">
                <div class="card-image">
                    <img src="{{course.img}}" alt="aaa">
                    <span class="card-title">{{course.title}}</span>
                </div>
                <div class="card-content">
                    <p>Цена {{course.price}}</p>
                </div>
            </div>
        </div>
    </div>
{{else}}
    <p>{{course}}</p>
{{/if}}
