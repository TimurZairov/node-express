<h2>Корзина</h2>
{{#if courses.length}}
    <table>
        <thead>
        <tr>
            <th>Название курса</th>
            <th>Колчество</th>
            <th>Цена</th>
        </tr>
        </thead>

        <tbody>
        {{#each courses}}
            <tr>
                <td>{{courseId.title}}</td>
                <td>{{count}}</td>
                <td>{{courseId.price}}</td>
                <td>
                    <form action="/cart/remove" method="post">
                        <input type="hidden" name="id" value="{{id}}">
                        <button type="submit" class="btn btn-primary">Удалить курс {{courseId.title}}</button>
                    </form>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    <h3>Итого: {{price}} руб</h3>
    <form action="/orders" method="post">
        <button type="submit" class="btn">Заказть курс</button>
    </form>


{{else}}
    <p>Корзина пуста</p>
{{/if}}
